<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //Стиль Загрузочного экрана
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/add_bgsplash</item>
    </style>

    //Цвет 3-х точек
    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/nav_menu3</item>
        <item name="android:textColorSecondary">@color/nav_menu3</item>
    </style>

    //Стиль диалогов
    <style name="DialogStyle">
        <item name="android:textSize">16sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">56dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">56dp</item><!-- item size in menu-->
    </style>
</resources>
